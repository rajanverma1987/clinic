                            d='M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z'
                          />
                        </svg>
                      </div>
                      <div className='flex-1 min-w-0'>
                        <p
                          className='font-semibold text-neutral-900 truncate mb-1'
                          style={{
                            fontSize: '15px',
                            lineHeight: '22px',
                          }}
                        >
                          {prescription.patientName ||
                            `Prescription #${prescription.prescriptionNumber || prescription.id}`}
                        </p>
                        <p
                          className='text-neutral-500'
                          style={{
                            fontSize: '13px',
                            lineHeight: '18px',
                          }}
                        >
                          {prescription.status || 'Active'} {' '}
                          {prescription.medications?.length || 0} medication
                          {prescription.medications?.length !== 1 ? 's' : ''}
                        </p>
                      </div>
                    </div>
                    <div className='text-right' style={{ flexShrink: 0 }}>
                      <svg
                        className='w-5 h-5 text-primary-600 transition-transform duration-200 group-hover:translate-x-1'
                        fill='none'
                        stroke='#2D9CDB'
                        viewBox='0 0 24 24'
                      >
                        <path
                          strokeLinecap='round'
                          strokeLinejoin='round'
                          strokeWidth={2}
                          d='M9 5l7 7-7 7'
                        />
                      </svg>
                    </div>
                  </div>
                ))}
              </div>
            ) : (
              <div className='flex flex-col items-center justify-center h-48 text-neutral-400'>
                <svg
                  className='w-16 h-16 mb-3 no-tint'
                  fill='none'
                  stroke='#D1D1D1'
                  viewBox='0 0 24 24'
                >
                  <path
                    strokeLinecap='round'
                    strokeLinejoin='round'
                    strokeWidth={2}
                    d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
                  />
                </svg>
                <p className='text-sm'>No prescriptions requiring refills</p>
              </div>
            )}
          </div>
        </Card>

        {/* Overdue Invoices List */}
        <Card
          elevated={true}
          className='overflow-hidden relative'
          style={{
            background:
              'linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(250,252,255,0.95) 100%)',
            border: '1px solid rgba(245,158,11,0.15)',
          }}
        >
          <div
            className='absolute top-0 right-0 opacity-20'
            style={{
              width: '200px',
              height: '200px',
              background: 'radial-gradient(circle, rgba(245,158,11,0.15) 0%, transparent 70%)',
              transform: 'translate(20%, -20%)',
            }}
          />
          <div className='relative z-10 p-6'>
            <div className='flex items-center gap-3 mb-6 pb-4 border-b border-neutral-200'>
              <div
                className='rounded-lg'
                style={{
                  width: '4px',
                  height: '24px',
                  background: 'linear-gradient(180deg, #F59E0B 0%, #D97706 100%)',
                }}
              />
              <div>
                <h2
                  className='text-neutral-900 font-bold mb-1'
                  style={{
                    fontSize: '20px',
                    lineHeight: '28px',
                    letterSpacing: '-0.02em',
                  }}
                >
                  Overdue Invoices
                </h2>
                <p
                  className='text-neutral-500'
                  style={{
                    fontSize: '14px',
                    lineHeight: '20px',
                  }}
                >
                  Pending payments requiring attention
                </p>
              </div>
            </div>

            {loadingLists ? (
              <div className='flex items-center justify-center h-48'>
                <Loader size='md' inline />
              </div>
            ) : overdueInvoices && overdueInvoices.length > 0 ? (
              <div className='space-y-3'>
                {overdueInvoices.map((invoice, index) => (
                  <div
                    key={index}
                    className='group flex items-center justify-between p-4 rounded-xl border-2 cursor-pointer transition-all duration-200 hover:shadow-md'
                    style={{
                      background:
                        'linear-gradient(135deg, rgba(255,255,255,0.9), rgba(250,252,255,0.7))',
                      borderColor: 'rgba(245,158,11,0.2)',
                      boxShadow: '0 2px 4px rgba(245,158,11,0.08)',
                    }}
                    onMouseEnter={(e) => {
                      e.currentTarget.style.borderColor = 'rgba(245,158,11,0.4)';
                      e.currentTarget.style.boxShadow = '0 4px 12px rgba(245,158,11,0.15)';
                    }}
                    onMouseLeave={(e) => {
                      e.currentTarget.style.borderColor = 'rgba(245,158,11,0.2)';
                      e.currentTarget.style.boxShadow = '0 2px 4px rgba(245,158,11,0.08)';
                    }}
                    onClick={() => router.push(`/invoices/${invoice._id || invoice.id}`)}
                  >
                    <div className='flex items-center gap-4 flex-1'>
                      <div
                        className='flex items-center justify-center rounded-xl transition-transform duration-200 group-hover:scale-110'
                        style={{
                          width: '48px',
                          height: '48px',
                          background:
                            'linear-gradient(135deg, rgba(245,158,11,0.15), rgba(245,158,11,0.08))',
                        }}
                      >
                        <svg
                          className='w-6 h-6 no-tint'
                          fill='none'
                          stroke='#F59E0B'
                          viewBox='0 0 24 24'
                        >
                          <path
                            strokeLinecap='round'
                            strokeLinejoin='round'
                            strokeWidth={2}
                            d='M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z'
                          />
                        </svg>
                      </div>
                      <div className='flex-1 min-w-0'>
                        <p
                          className='font-semibold text-neutral-900 truncate mb-1'
                          style={{
                            fontSize: '15px',
                            lineHeight: '22px',
                          }}
                        >
                          {invoice.patientName || `Invoice #${invoice.invoiceNumber || invoice.id}`}
                        </p>
                        <p
                          className='text-neutral-500'
                          style={{
                            fontSize: '13px',
                            lineHeight: '18px',
                          }}
                        >
                          Due:{' '}
                          {new Date(invoice.dueDate).toLocaleDateString('en-US', {
                            month: 'short',
                            day: 'numeric',
                            year: 'numeric',
                          })}
                        </p>
                      </div>
                    </div>
                    <div className='text-right' style={{ flexShrink: 0 }}>
                      <p
                        className='font-bold text-status-warning mb-1'
                        style={{
                          fontSize: '15px',
                          lineHeight: '22px',
                        }}
                      >
                        {formatCurrency(invoice.totalAmount || invoice.amount || 0)}
                      </p>
                      <p
                        className='text-neutral-500'
                        style={{
                          fontSize: '12px',
                          lineHeight: '16px',
                        }}
                      >
                        {Math.floor(
                          (new Date() - new Date(invoice.dueDate)) / (1000 * 60 * 60 * 24)
                        )}{' '}
                        days overdue
                      </p>
                    </div>
                  </div>
                ))}
              </div>
            ) : (
              <div className='flex flex-col items-center justify-center h-48 text-neutral-400'>
                <svg
                  className='w-16 h-16 mb-3 no-tint'
                  fill='none'
                  stroke='#D1D1D1'
                  viewBox='0 0 24 24'
                >
                  <path
                    strokeLinecap='round'
                    strokeLinejoin='round'
                    strokeWidth={2}
                    d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
                  />
                </svg>
                <p className='text-sm'>No overdue invoices</p>
              </div>
            )}
          </div>
        </Card>

        {/* Low Stock Items List */}
        <Card
          elevated={true}
          className='overflow-hidden relative'
          style={{
            background:
              'linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(250,252,255,0.95) 100%)',
            border: '1px solid rgba(239,68,68,0.15)',
          }}
        >
          <div
            className='absolute top-0 right-0 opacity-20'
            style={{
              width: '200px',
              height: '200px',
              background: 'radial-gradient(circle, rgba(239,68,68,0.15) 0%, transparent 70%)',
              transform: 'translate(20%, -20%)',
            }}
          />
          <div className='relative z-10 p-6'>
            <div className='flex items-center gap-3 mb-6 pb-4 border-b border-neutral-200'>
              <div
                className='rounded-lg'
                style={{
                  width: '4px',
                  height: '24px',
                  background: 'linear-gradient(180deg, #EF4444 0%, #DC2626 100%)',
                }}
              />
              <div>
                <h2
                  className='text-neutral-900 font-bold mb-1'
                  style={{
                    fontSize: '20px',
                    lineHeight: '28px',
                    letterSpacing: '-0.02em',
                  }}
                >
                  Low Stock Items
                </h2>
                <p
                  className='text-neutral-500'
                  style={{
                    fontSize: '14px',
                    lineHeight: '20px',
                  }}
                >
                  Items requiring restock
                </p>
              </div>
            </div>

            {loadingLists ? (
              <div className='flex items-center justify-center h-48'>
                <Loader size='md' inline />
              </div>
            ) : lowStockList && lowStockList.length > 0 ? (
              <div className='space-y-3'>
                {lowStockList.map((item, index) => (
                  <div
                    key={index}
                    className='group flex items-center justify-between p-4 rounded-xl border-2 cursor-pointer transition-all duration-200 hover:shadow-md'
                    style={{
                      background:
                        'linear-gradient(135deg, rgba(255,255,255,0.9), rgba(250,252,255,0.7))',
                      borderColor: 'rgba(239,68,68,0.2)',
                      boxShadow: '0 2px 4px rgba(239,68,68,0.08)',
                    }}
                    onMouseEnter={(e) => {
                      e.currentTarget.style.borderColor = 'rgba(239,68,68,0.4)';
                      e.currentTarget.style.boxShadow = '0 4px 12px rgba(239,68,68,0.15)';
                    }}
                    onMouseLeave={(e) => {
                      e.currentTarget.style.borderColor = 'rgba(239,68,68,0.2)';
                      e.currentTarget.style.boxShadow = '0 2px 4px rgba(239,68,68,0.08)';
                    }}
                    onClick={() => router.push(`/inventory/items/${item._id || item.id}`)}
                  >
                    <div className='flex items-center gap-4 flex-1'>
                      <div
                        className='flex items-center justify-center rounded-xl transition-transform duration-200 group-hover:scale-110'
                        style={{
                          width: '48px',
                          height: '48px',
                          background:
                            'linear-gradient(135deg, rgba(239,68,68,0.15), rgba(239,68,68,0.08))',
                        }}
                      >
                        <svg
                          className='w-6 h-6 no-tint'
                          fill='none'
                          stroke='#EF4444'
                          viewBox='0 0 24 24'
                        >
                          <path
                            strokeLinecap='round'
                            strokeLinejoin='round'
                            strokeWidth={2}
                            d='M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4'
                          />
                        </svg>
                      </div>
                      <div className='flex-1 min-w-0'>
                        <p
                          className='font-semibold text-neutral-900 truncate mb-1'
                          style={{
                            fontSize: '15px',
                            lineHeight: '22px',
                          }}
                        >
                          {item.name || item.itemName || 'Item Name'}
                        </p>
                        <p
                          className='text-neutral-500'
                          style={{
                            fontSize: '13px',
                            lineHeight: '18px',
                          }}
                        >
                          SKU: {item.sku || item.code || 'N/A'}
                        </p>
                      </div>
                    </div>
                    <div className='text-right' style={{ flexShrink: 0 }}>
                      <p
                        className='font-bold text-status-error mb-1'
                        style={{
                          fontSize: '15px',
                          lineHeight: '22px',
                        }}
                      >
                        {item.currentStock || item.quantity || 0} left
                      </p>
                      <p
                        className='text-neutral-500'
                        style={{
                          fontSize: '12px',
                          lineHeight: '16px',
                        }}
                      >
                        Min: {item.minStock || item.minimumQuantity || 0}
                      </p>
                    </div>
                  </div>
                ))}
              </div>
            ) : (
              <div className='flex flex-col items-center justify-center h-48 text-neutral-400'>
                <svg
                  className='w-16 h-16 mb-3 no-tint'
                  fill='none'
                  stroke='#D1D1D1'
                  viewBox='0 0 24 24'
                >
                  <path
                    strokeLinecap='round'
                    strokeLinejoin='round'
                    strokeWidth={2}
                    d='M5 13l4 4L19 7'
                  />
                </svg>
                <p className='text-sm'>All items are well-stocked</p>
              </div>
            )}
          </div>
        </Card>
      </div>
    </Layout>
  );
}
